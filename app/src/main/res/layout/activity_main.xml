<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background=" #808080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clear_btn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:gravity="center"
                android:padding="21dp"
                android:background="@drawable/button_layout"
                android:drawableStart="@drawable/ic_baseline_backspace_24"
                android:textColor="@color/white"
                android:textSize="30sp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/open_bracket"
            android:layout_width="72dp"
            android:layout_height="72dp"
                android:gravity="center"
            android:layout_margin="13dp"
                android:textColor="@color/white"
                android:background="#a40000"
            android:text="("
            android:textSize="30sp" >

        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/close_bracket"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:background="#a40000"
            android:textColor="@color/white"
            android:gravity="center"
            android:text=")"
            android:textSize="30sp" >

        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_btn"
            android:layout_width="72dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:background="#a40000"
            android:text="+"
            android:textSize="30sp" >

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seven_btn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:gravity="center"
                android:layout_margin="13dp"
                android:text="7"
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eight_btn"
                android:layout_width="72dp"
                android:gravity="center"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:text="8"
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nine_btn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:text="9"
                android:textSize="30sp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sub_btn"
                android:layout_width="72dp"
                android:gravity="center"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:background="#a40000"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="30sp">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/four_btn"
                android:layout_width="72dp"
                android:gravity="center"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:text="4"
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/five_btn"
                android:layout_width="72dp"
                android:gravity="center"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:text="5"
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/six_btn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:gravity="center"
                android:layout_margin="13dp"
                android:text="6"
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mul_btn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="13dp"
                android:text="*"
                android:background="#a40000"
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/one_btn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:gravity="center"
                android:layout_margin="13dp"
                android:text="1"
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/two_btn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:gravity="center"
                android:text="2"
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/three_btn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:gravity="center"
                android:layout_margin="13dp"
                android:text="3"
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/div_btn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="/"
                android:background="#a40000"
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ac_btn"
                android:layout_width="72dp"
                android:background="@drawable/button_layout"
                android:textColor="@color/white"
                android:layout_height="72dp"
                android:gravity="center"
                android:layout_margin="13dp"
                android:text="AC"
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero_btn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:gravity="center"
                android:layout_margin="13dp"
                android:text="0"
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dot_btn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:gravity="center"
                android:text="."
                android:textSize="30sp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/equal_btn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:gravity="center"
                android:background="@drawable/button_layout"
                android:textColor="@color/white"
                android:text="="
                android:textSize="30sp" >

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/result_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/linear_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906" />

    <TextView
        android:id="@+id/solution_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:layout_marginStart="28dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/result_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172" />

</androidx.constraintlayout.widget.ConstraintLayout>